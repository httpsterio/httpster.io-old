{% set paginationModifierClasss = 'l-pagination--right' if paginationNextUrl and not paginationPrevUrl else '' %}

{% if paginationNextUrl or paginationPrevUrl %}
  <footer class="l-container">
    <nav aria-label="pagination" class="l-pagination {{paginationModifierClasss}}">
      {% if paginationPrevUrl %}
        <a href="{{ paginationPrevUrl }}" data-direction="backwards" class="l-pagination-link l-pagination-link--left">
          <span aria-hidden="true">
            {% include "partials/icons/arrow-left.svg" %}
          </span>

          <span>
            {{ paginationPrevText if paginationPrevText else 'Newer posts' }}
          </span>
        </a>
      {% endif %}
      {% if paginationNextUrl %}
        <a href="{{ paginationNextUrl }}" data-direction="forwards" class="l-pagination-link l-pagination-link--right">
            {{ paginationNextText if paginationNextText else 'Older posts' }}
          <span aria-hidden="true">
            {% include "partials/icons/arrow-right.svg" %}
          </span>
        </a>
      {% endif %}
    </nav>
  </footer>
{% endif %}